{{>layout/header}}
<!-- 등록폼이 들어갈 자리 -->
<h2>게시글 등록</h2>
    <div class="col-md-12">
        <form name="form_posts" id="form_posts" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" required>
            </div>
            <div class="form-group">
                <label for="author"> 작성자</label>
                <input value="{{sessionUserName}}" readonly type="text" class="form-control" id="author" placeholder="작성자를 입력하세요">
            </div>
            <div class="form-group">
                <label for="content"> 내용</label>
                <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
            	<input type="hidden" name="file_id" id="file_id" value="">
                <label for="inputFile">단일 첨부 파일</label>
                <div class="col-sm-10">
                    <div class="custom-file" id="inputFile">
                        <input name="file" type="file" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">파일을 선택해 주세요.</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
	            <label for="inputFile">다중 첨부 파일</label>
	            <div class="col-sm-10">
	                <div class="custom-file" id="inputFile">
	                    <input name="many_file" type="file" class="custom-file-input many_file">
	                    <label class="custom-file-label">파일을 선택해 주세요.</label>
	                </div>
	            </div>
	            <div class="col-sm-10">
	                <div class="custom-file" id="inputFile">
	                    <input name="many_file" type="file" class="custom-file-input many_file">
	                    <label class="custom-file-label">파일을 선택해 주세요.</label>
	                </div>
	            </div>
	        </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
<script>
//첨부파일 디자인 처리 코딩
$("#customFile").on("change", function() {
  var fileName = $(this).val().split("\\").pop();
  $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
});

//멀티첨부파일 디자인 처리 코딩
$(".many_file").on("change", function() {
  var fileName = $(this).val().split("\\").pop();
  $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
});
</script>
{{>layout/footer}} <!-- 버튼액션은 푸터의 /js/app/index.js 경로에서 처리한다. -->